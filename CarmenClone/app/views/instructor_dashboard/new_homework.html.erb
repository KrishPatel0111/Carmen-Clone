<div class="container mt-5">
  <div class="card shadow-lg p-4 mb-4 bg-white">
    <h1 class="display-4">Create New Homework</h1>
    <!-- Form to create new homework -->
    <%= form_with model: @homework, url: create_homework_path, local: true do |f| %>
      <div class="form-group mt-3">
        <!-- Homework title input -->
        <%= f.label :title, 'Homework Title' %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>
      
      <div class="form-group mt-3">
        <!-- Homework description input -->
        <%= f.label :description, 'Description' %>
        <%= f.text_area :description, class: 'form-control', rows: 5, required: true %>
      </div>

      <div class="form-group mt-3">
         <!-- Homework due date input -->
        <%= f.label :due_date, 'Due Date' %>
        <%= f.datetime_select :due_date, class: 'form-control', required: true %>
      </div>

       <!-- Hidden field for course ID -->
      <%= f.hidden_field :course_id, value: params[:course_id] %>

      <div class="form-group mt-4">
         <!-- Submit button -->
        <%= f.submit 'Create Homework', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
